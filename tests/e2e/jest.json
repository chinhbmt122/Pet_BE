{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/test-db.setup.ts"],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transformIgnorePatterns": ["node_modules/(?!.*\\.mjs$)"]
}
