{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/test-db.setup.ts"],
  "testRegex": ".(integration-spec|integration\\.spec).ts$",
  "maxWorkers": 1,
  "testTimeout": 30000,
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "tsconfig": "<rootDir>/tsconfig.test.json"
    }]
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transformIgnorePatterns": ["node_modules/(?!.*\\.mjs$)"],
  "testPathIgnorePatterns": ["/node_modules/", "/tests/unit/", "/tests/e2e/"]
}